# Get the issues closed in the latest release

set -e

if [ "$(dpkg-parsechangelog | grep Closes:)" != "" ]; then
  echo "* Issues fixed:"
  dpkg-parsechangelog | sed -n  's/.*Closes: \(.*\)/    * \1/p'
fi
